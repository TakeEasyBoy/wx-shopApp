/**index.wxss**/
.head{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
}
.head .img{
  width: 50px;
  height: 50px;
}
.body-content{
  display: flex;
  flex-direction: row; 
}

.body-content .content{
  width: 33%;
  height: 100px;
  display: flex;
  flex-direction: column; 
  justify-content: center;
  align-items: center;
}
.body-content .content:not(:nth-of-type(1)){
  border-left: 1px solid #ddd;
}
.body-content .content .content-text{
  font-size: 12px;
  height: 20px;
  line-height: 20px;
}
.body-content .content .content-img{
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}
.notice{
  width: 100%;
  height: 30px;
  background-color: #ccc;
}
.notice .notice-text{
  font-size: 12px;
  color: #fefefe;
  letter-spacing: 1px;
  height: 30px;
  line-height: 30px;
  position: relative;
  left: 100%;
  animation: righttoleft 8s linear infinite;
}
@keyframes righttoleft{
  0%{
    left:90%
  }
  100%{
    left:-100%
  }
}
